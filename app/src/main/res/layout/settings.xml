<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.wit.hillfort.activities.Settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:fitsSystemWindows="true"
            app:elevation="0dip"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleTextColor="@color/colorPrimary" />
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appBarLayout"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="User Settings"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textFontWeight="500"
                    android:textSize="40dp"
                    android:layout_marginTop="10dp"

                    />

                <TextView
                    android:id="@+id/showEmail"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:background="@color/colorPrimary"
                    />

                <TextView
                    android:id="@+id/numberOfHillforts"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="20dp"
                    android:text="Number of Hillforts"
                    android:textFontWeight="500"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/numberOfHillfortsVisited"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="20dp"
                    android:text="Number of Hillforts Visited"
                    android:textFontWeight="500"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/numberOfFavourtieHillforts"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="20dp"
                    android:text="Number of Hillforts Visited"
                    android:textFontWeight="500"
                    android:textSize="20dp"
                    />




            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>