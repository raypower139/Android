<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="3dp"
    android:elevation="24dp">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp"
        app:layout_constraintEnd_toStartOf="@+id/hillfortTitle"
        app:layout_constraintStart_toStartOf="@+id/hillfortTitle">

      <TextView
          android:id="@+id/hillfortTitle"
          android:layout_width="489dp"
          android:layout_height="37dp"
          android:layout_marginStart="10dp"
          android:layout_marginTop="4dp"
          android:textSize="24sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.002"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:layout_conversion_absoluteHeight="32dp"
          tools:layout_conversion_absoluteWidth="0dp" />


      <TextView
          android:id="@+id/description"
          android:layout_width="489dp"
          android:layout_height="35dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="5dp"

          android:inputType="textMultiLine"
          android:textSize="12sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/hillfortTitle"
          tools:layout_conversion_absoluteHeight="16dp"
          tools:layout_conversion_absoluteWidth="270dp" />

      <CheckBox
          android:id="@+id/visited_checkbox_card"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="3dp"
          android:text="Visited"
          android:textSize="16dp"
          app:layout_constraintTop_toBottomOf="@+id/description"
          tools:layout_conversion_absoluteHeight="32dp"
          tools:layout_conversion_absoluteWidth="82dp"
          tools:layout_editor_absoluteX="13dp" />

      <TextView
          android:id="@+id/setDate"
          android:layout_width="170dp"
          android:layout_height="22dp"


          android:layout_marginStart="5dp"
          android:layout_marginTop="9dp"
          android:text=""
          android:textSize="16dp"
          app:layout_constraintStart_toEndOf="@+id/visited_checkbox_card"
          app:layout_constraintTop_toBottomOf="@+id/description"
          tools:layout_conversion_absoluteHeight="21dp"
          tools:layout_conversion_absoluteWidth="0dp" />

      <ImageView
          android:id="@+id/imageIcon"
          android:layout_width="171dp"
          android:layout_height="107dp"
          android:layout_marginEnd="20dp"
          android:contentDescription="@string/change_hillfort_image"
          app:layout_constraintEnd_toEndOf="parent"
          tools:layout_conversion_absoluteHeight="90dp"
          tools:layout_conversion_absoluteWidth="125dp"
          tools:layout_editor_absoluteY="3dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>